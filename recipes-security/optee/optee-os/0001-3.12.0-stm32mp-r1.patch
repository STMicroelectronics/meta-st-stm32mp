+	case STM32_PM_CSTOP_ALLOW_STANDBY_DDR_SR:
+	case STM32_PM_CSTOP_ALLOW_STANDBY_DDR_OFF:
+#ifdef STM32MP1_USE_MPU0_RESET
+		stm32mp_pm_shutdown_context();
+		reset_other_core();
+		stm32_enter_cstop(mode);
+		dsb();
+		isb();
+		for ( ; ; )
+			wfi();
+#else
+		if (stm32mp_with_pmic()) {
+			wait_console_flushed();
+			stm32mp_get_pmic();
+			stpmic1_switch_off();
+			udelay(100);
+		}
