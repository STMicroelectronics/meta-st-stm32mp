+
+static TEE_Result timer_pm(enum pm_op op, uint32_t pm_hint __unused,
+			   const struct pm_callback_handle *handle __unused)
+{
+	if (op == PM_OP_RESUME && timer_val)
+		calib_period();
+
+	return TEE_SUCCESS;
+}
+DECLARE_KEEP_PAGER(timer_pm);
