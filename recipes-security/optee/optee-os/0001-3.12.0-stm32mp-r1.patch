+	for (i = 0; i < ARRAY_SIZE(rproc_ta_mp1_m4_mems); i++) {
+		if (da >= mems[i].da &&
+		    (da + size) <= (mems[i].da + mems[i].size)) {
+			*pa = da - mems[i].da + mems[i].pa;
+			DMSG("da %#"PRIxPA" to pa %#"PRIxPA, da, *pa);
