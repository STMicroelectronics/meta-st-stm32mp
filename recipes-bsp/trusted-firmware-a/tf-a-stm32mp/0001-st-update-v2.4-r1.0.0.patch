+		/* Check if key hash values in OTP are 0 or 0xFFFFFFFFF programmed : Invalid Key */
+		uint32_t res;
+		uint32_t rootpk;
+		uint8_t *proot_pk = root_pk_hash;
+		uint8_t idx = sizeof(uint32_t);
+
+#if !STM32MP_USE_STM32IMAGE
