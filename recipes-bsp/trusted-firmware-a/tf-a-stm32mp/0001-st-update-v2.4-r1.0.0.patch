+ */
+static void int_to_str(uint32_t value, uint8_t *pstr, uint8_t len)
+{
+	uint8_t idx, v;
+
+	if (len > 9U) {
+		len = 9U;
+	}
+
+	for (idx = 0U; idx < len - 1U; idx++) {
+		v = (value >> (4U * (len - 2U - idx))) & 0xFU;
+		if (v < 0xAU) {
+			pstr[idx] = '0' + v;
+		} else {
+			pstr[idx] = 'A' + v - 0xAU;
+		}
+	}
+	pstr[len - 1] = 0U;
+}
